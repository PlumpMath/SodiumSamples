<Window x:Class="LiveScripting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiveScripting"
        mc:Ignorable="d"
        Title="Live Scripting C#" Height="350" Width="525">
    <Grid Name="gridMain">
        <Grid.RowDefinitions>
           <RowDefinition Height="30" />
           <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
           <ColumnDefinition Width="0.5*" />
           <ColumnDefinition Width="0.5*" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Background="Cornsilk" BorderBrush="BlanchedAlmond" BorderThickness="1">Type your C# script here</Label>
        <Label Grid.Row="0" Grid.Column="1" Background="Cornsilk" BorderBrush="BlanchedAlmond" BorderThickness="1">See the result here, live</Label>
        <TextBox Name="txtInput" Grid.Row="1" Grid.Column="0" />
        <TextBox Name="txtResult" Grid.Row="1" Grid.Column="1" Background="WhiteSmoke" IsReadOnly="True"/>
    </Grid>
</Window>
